@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Conferma reset password";
}

<style>
    body {
        background-color: #1e1e1e;
        color: #f0f0f0;
        font-family: 'Segoe UI', sans-serif;
    }

    .confirmation-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 20px;
        text-align: center;
    }

    .logo-bazzer {
        max-height: 240px;
        margin-bottom: 20px;
    }

    .btn-home {
        background-color: #e91e63;
        color: white;
        border: none;
        padding: 10px 24px;
        font-size: 1.1rem;
        border-radius: 6px;
        margin-top: 25px;
        text-decoration: none;
    }

        .btn-home:hover {
            background-color: #c2185b;
            text-decoration: none;
        }
</style>

<div class="confirmation-container">
    <img src="~/png/logo_bazzer.png" alt="Logo Bazzer" class="logo-bazzer" />

    <h2 class="mb-4">@ViewData["Title"]</h2>

    <p>Controlla la tua email per completare il reset della password.</p>

    <a href="/" class="btn-home">Torna alla Home</a>
</div>
