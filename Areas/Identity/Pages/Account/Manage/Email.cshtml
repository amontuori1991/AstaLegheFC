@page
@model AstaLegheFC.Areas.Identity.Pages.Account.Manage.EmailModel
@{
    ViewData["Title"] = "Email";
}
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-label">Email corrente</label>
            <input class="form-control" value="@Model.Email" disabled />
            @if (!Model.IsEmailConfirmed)
            {
                <div class="small text-warning mt-1">Email non confermata.</div>
            }
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Input.NewEmail" class="form-label">Nuova email</label>
                <input asp-for="Input.NewEmail" class="form-control" />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cambia email</button>
        </form>

        <form method="post" asp-page-handler="SendVerificationEmail" class="mt-3">
            <button type="submit" class="btn btn-outline-secondary">Invia email di verifica</button>
        </form>
    </div>
</div>
