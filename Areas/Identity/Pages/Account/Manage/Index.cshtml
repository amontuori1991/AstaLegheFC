@page
@model IndexModel
@{
    ViewData["Title"] = "Profilo";
}
<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Nome utente</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="Input.PhoneNumber" class="form-label">Telefono</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">Salva</button>
        </form>
    </div>
</div>
