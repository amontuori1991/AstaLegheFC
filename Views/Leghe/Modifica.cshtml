@model AstaLegheFC.Models.Lega
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Modifica Lega";
}

<h2 class="mt-4">Modifica Lega: @Model.Nome</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Modifica">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Alias" class="form-label"></label>
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CreditiIniziali" class="form-label"></label>
                <input asp-for="CreditiIniziali" class="form-control" />
                <span asp-validation-for="CreditiIniziali" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Annulla</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}