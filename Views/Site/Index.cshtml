    <!-- CONTATTI -->
    <section class="section" id="contatti">
        <h2>Contatti</h2>
        <p class="muted">Compila il modulo per ricevere supporto o informazioni commerciali.</p>

        <form method="post" asp-action="SendContact" asp-controller="Site" class="row g-3 mt-3">
            @Html.AntiForgeryToken()

            <div class="col-md-6">
                <label class="form-label">Nome</label>
                <input type="text" name="Name" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" required />
            </div>

            <div class="col-12">
                <label class="form-label">Oggetto</label>
                <input type="text" name="Subject" class="form-control" required />
            </div>

            <div class="col-12">
                <label class="form-label">Messaggio</label>
                <textarea name="Message" rows="5" class="form-control" required></textarea>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Invia</button>
            </div>
        </form>

        @if (TempData["ContactOk"] != null)
        {
            <div class="alert alert-success mt-3">@TempData["ContactOk"]</div>
        }
        @if (TempData["ContactErr"] != null)
        {
            <div class="alert alert-danger mt-3">@TempData["ContactErr"]</div>
        }
    </section>
    <div class="modal fade modal-dark" id="activateModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Attiva abbonamento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">Scegli il metodo di pagamento:</p>
                    <div class="d-grid gap-2">
                        <a id="payStripeLink" class="btn btn-primary" href="#">Carta di credito (Stripe)</a>
                        <a id="payPayPalLink" class="btn btn-outline-light" href="#">PayPal</a>
                    </div>
                    <p class="small text-muted mb-0 mt-3">
                        Effettuando il pagamento accetti i Termini e l’Informativa Privacy.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        (function () {
          const activateModal = document.getElementById('activateModal');
          const stripeLink = document.getElementById('payStripeLink');
          const paypalLink = document.getElementById('payPayPalLink');

          // quando apro da un bottone delle card, prendo il piano
          activateModal.addEventListener('show.bs.modal', ev => {
            const btn = ev.relatedTarget;
            const plan = (btn?.getAttribute('data-plan') || '12M').toUpperCase();
            stripeLink.href = `/Payment/Begin?plan=${encodeURIComponent(plan)}&provider=stripe`;
            paypalLink.href = `/Payment/Begin?plan=${encodeURIComponent(plan)}&provider=paypal`;
          });

          // se vengo rimandato con needPlan=1, apro automaticamente (default 12M)
          const usp = new URLSearchParams(window.location.search);
          if (usp.get('needPlan') === '1') {
            const plan = '12M';
            stripeLink.href = `/Payment/Begin?plan=${encodeURIComponent(plan)}&provider=stripe`;
            paypalLink.href = `/Payment/Begin?plan=${encodeURIComponent(plan)}&provider=paypal`;

            const m = new bootstrap.Modal(activateModal);
            m.show();
          }
        })();
    </script>



<!-- ====== MODAL VIDEO (Bootstrap) ====== -->
<div class="modal fade modal-dark" id="videoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Demo funzionalità</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
            </div>
            <div class="modal-body">
                <div class="video-wrap" id="videoContainer">
                    <!-- YouTube embed -->
                    <iframe id="ytFrame" src="" allow="autoplay; encrypted-media" allowfullscreen></iframe>

                    <!-- In alternativa a YouTube, usa una GIF/MP4 locale:
                    <img src="~/video/demo_import.gif" alt="Demo" />
                    oppure
                    <video src="~/video/demo_import.mp4" autoplay muted loop playsinline></video>
                    -->
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    (() => {
      const modal = document.getElementById('videoModal');
      const frame = document.getElementById('ytFrame');
      modal.addEventListener('show.bs.modal', ev => {
        const btn = ev.relatedTarget;
        const id = btn?.getAttribute('data-video-id') || '';
        // autoplay 1, modestbranding per player pulito
        frame.src = id ? `https://www.youtube.com/embed/${id}?autoplay=1&rel=0&modestbranding=1` : '';
      });
      modal.addEventListener('hidden.bs.modal', () => {
        frame.src = ''; // stop video quando chiudi
      });
    })();
</script>
