@{
    ViewData["Title"] = "AstaLeghe FC – Software per aste fantacalcio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ====== BASE ====== */
    .section {
        margin-top: 48px;
    }

    .muted {
        color: #aab4c0;
    }

    /* ====== HERO watermark ====== */
    .hero-wrap {
        --wm-size: clamp(420px, 62vw, 820px);
        display: grid;
        place-items: center;
        padding: 24px;
    }

    .hero {
        position: relative;
        width: min(1100px,96%);
        height: var(--wm-size);
        background: linear-gradient(145deg,#0e172a,#1b2735);
        border: 1px solid #243347;
        border-radius: 16px;
        overflow: hidden;
        display: grid;
        place-items: center;
        text-align: center;
        padding: 16px;
        color: #e8eef6;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: url('/png/logo_bazzer.png') no-repeat center;
        background-size: var(--wm-size);
        opacity: .09;
        filter: blur(.5px);
        z-index: 0;
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: min(720px, 86%);
    }

    .hero-logo {
        height: 92px;
    }

    .hero-title {
        font-size: clamp(28px,4.2vw,48px);
        font-weight: 800;
        color: #2fb4ff;
        margin: 6px 0 8px;
    }

    .hero-copy {
        font-size: .6em;
        vertical-align: super;
        margin-left: 2px;
        opacity: .8;
    }

    .hero-subtitle {
        color: #dbe4ee;
        opacity: .95;
        font-size: clamp(15px,1.6vw,18px);
        line-height: 1.55;
    }

    .btn-primary {
        background: #e91e63;
        border: none;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 600;
        box-shadow: 0 8px 22px rgba(233,30,99,.25);
        transition: transform .18s ease, box-shadow .18s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(233,30,99,.35);
        }

    .btn-outline-light {
        border: 2px solid #fff;
        color: #fff;
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 600;
        transition: all .18s ease;
    }

        .btn-outline-light:hover {
            background: #fff;
            color: #1b2735;
            transform: translateY(-2px);
        }

    @@media (max-width: 576px) {
        .hero-logo

    {
        height: 72px;
    }

    }

    /* ====== FEATURE CARDS ====== */
    .feature-card {
        background: #132132;
        border: 1px solid #243347;
        border-radius: 14px;
        padding: 18px;
        color: #e8eef6;
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

        .feature-card h5 {
            margin: 4px 0 2px;
            font-weight: 700;
        }

        .feature-card p, .feature-card li {
            color: #d3dde8;
        }

    .feature-actions {
        margin-top: auto;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-ghost {
        background: transparent;
        border: 1px solid #30445f;
        color: #cfe2ff;
        padding: 8px 14px;
        border-radius: 10px;
    }

        .btn-ghost:hover {
            background: #203148;
            color: #fff;
        }

    /* ====== SOCIAL PROOF ====== */
    .logo-wall {
        display: grid;
        gap: 16px;
        grid-template-columns: repeat(auto-fit,minmax(120px,1fr));
        align-items: center;
    }

        .logo-wall .logo-box {
            background: #0f1a28;
            border: 1px dashed #30445f;
            border-radius: 12px;
            padding: 16px;
            text-align: center;
            color: #7f93ad;
        }

    .testi {
        display: grid;
        gap: 16px;
        grid-template-columns: repeat(auto-fit,minmax(280px,1fr));
    }

    .quote {
        background: #132132;
        border: 1px solid #243347;
        border-radius: 14px;
        padding: 16px;
        color: #e8eef6;
    }

        .quote .who {
            color: #aab4c0;
            font-size: .95rem;
        }

    /* ====== PRICING ====== */
    .prices {
        display: grid;
        gap: 16px;
        grid-template-columns: repeat(auto-fit,minmax(240px,1fr));
    }

    .cardx {
        background: #132132;
        border: 1px solid #243347;
        border-radius: 14px;
        padding: 18px;
        color: #e8eef6;
        position: relative;
    }

        .cardx h3 {
            margin: 4px 0 8px;
        }

    .badge {
        display: inline-block;
        background: #203148;
        border: 1px solid #2c4060;
        border-radius: 999px;
        padding: 3px 10px;
        font-size: .85rem;
    }

    .pricing .price {
        font-size: 2rem;
        font-weight: 800;
    }

    .pricing .period {
        font-size: .95rem;
        opacity: .9;
    }

    .badge-reco {
        position: absolute;
        top: 12px;
        right: 12px;
        background: #e91e63;
        color: #fff;
        border: 0;
        padding: 4px 10px;
        border-radius: 999px;
        font-weight: 700;
        box-shadow: 0 8px 18px rgba(233,30,99,.28);
    }

    /* ====== CTA finale ====== */
    .cta-final {
        background: linear-gradient(145deg,#0e172a,#1b2735);
        border: 1px solid #243347;
        border-radius: 16px;
        padding: 28px;
        text-align: center;
        color: #e8eef6;
    }

    /* ====== VIDEO MODAL ====== */
    .modal-dark .modal-content {
        background: #0f1a28;
        color: #e8eef6;
        border: 1px solid #243347;
    }

    .modal-dark .btn-close {
        filter: invert(1);
    }

    .video-wrap {
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        overflow: hidden;
        border-radius: 12px;
    }

        .video-wrap iframe, .video-wrap video, .video-wrap img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
            object-fit: cover;
        }
</style>

