@model List<AstaLegheFC.Models.CalciatoreListone>
@{
    ViewData["Title"] = "Listone Calciatori";
}

<h2 class="mt-3">Listone Calciatori</h2>

<form id="filtroForm" method="get" asp-action="VisualizzaListone" class="row g-2 mb-4">
    <div class="col-md-4">
        <input type="text" name="nome" class="form-control" placeholder="Cerca per nome"
               value="@ViewBag.Nome" oninput="submitFormDebounced()" />
    </div>
    <div class="col-md-4">
        <input type="text" name="squadra" class="form-control" placeholder="Cerca per squadra"
               value="@ViewBag.Squadra" oninput="submitFormDebounced()" />
    </div>
    <div class="col-md-4">
        <select name="ruolo" class="form-select" onchange="submitFormDebounced()">
            <option value="">Tutti i ruoli</option>
            @foreach (var ruolo in (List<string>)ViewBag.RuoliDisponibili)
            {
                <option value="@ruolo" selected="@(ViewBag.Ruolo == ruolo ? "selected" : null)">
                    @ruolo
                </option>
            }
        </select>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>Nome</th>
                <th>Ruolo</th>
                <th>Ruolo Mantra</th>
                <th>Squadra</th>
                <th>Qt.A</th>
                <th>Qt.I</th>
                <th>Diff</th>
                <th>Qt.A M</th>
                <th>Qt.I M</th>
                <th>Diff.M</th>
                <th>FVM</th>
                <th>FVM M</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var c in Model)
            {
                <tr>
                    <td class="text-start">@c.Nome</td>
                    <td>@c.Ruolo</td>
                    <td>@c.RuoloMantra</td>
                    <td class="text-start">@c.Squadra</td>
                    <td>@c.QtA</td>
                    <td>@c.QtI</td>
                    <td>@c.Diff</td>
                    <td>@c.QtAM</td>
                    <td>@c.QtIM</td>
                    <td>@c.DiffM</td>
                    <td>@c.FVM</td>
                    <td>@c.FVMM</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        let debounceTimer;

        function submitFormDebounced() {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                const form = document.getElementById("filtroForm");
                const query = new URLSearchParams(new FormData(form)).toString();
                window.location.href = form.action + "?" + query;
            }, 500);
        }
    </script>
}
