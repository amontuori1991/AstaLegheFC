@model List<AstaLegheFC.Models.Squadra>
@{
    ViewData["Title"] = "Squadre";
    var nomeLega = ViewBag.LegaNome as string;
    var legaId = ViewBag.LegaId != null ? (int)ViewBag.LegaId : 0;

}

<h2 class="mt-4">Squadre - @nomeLega</h2>

<a class="btn btn-primary mb-3" asp-action="Crea" asp-route-legaId="@legaId">
    + Aggiungi Squadra
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">Nessuna squadra ancora creata.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark text-center">
                <tr>
                    <th>Nome Squadra</th>
                    <th>Nickname</th>
                    <th>Crediti</th>
                    <th>Portieri</th>
                    <th>Difensori</th>
                    <th>Centrocampisti</th>
                    <th>Attaccanti</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var squadra in Model)
                {
                    <tr>
                        <td>@squadra.Nome</td>
                        <td>@squadra.Nickname</td>
                        <td>@squadra.Crediti</td>
                        <td>@squadra.Portieri / 6</td>
                        <td>@squadra.Difensori / 8</td>
                        <td>@squadra.Centrocampisti / 8</td>
                        <td>@squadra.Attaccanti / 6</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
