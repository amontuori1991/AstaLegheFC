@model List<AstaLegheFC.Models.Squadra>
@{
    ViewData["Title"] = "Squadre";
    var nomeLega = ViewBag.LegaNome as string;
    var legaId = ViewBag.LegaId != null ? (int)ViewBag.LegaId : 0;
}
@{
    var baseUrl = (string)(ViewBag.BaseUrl ?? "");
    var legaAlias = (string)(ViewBag.LegaAlias ?? "");
    var allPairs = Model.Select(s => new
    {
        Nickname = s.Nickname ?? "",
        Link = $"{baseUrl}/Utente?lega={legaAlias}&nick={Uri.EscapeDataString(s.Nickname ?? "")}"
    }).ToList();
    var allPairsJson = System.Text.Json.JsonSerializer.Serialize(allPairs);
}

<h2 class="mt-4">Squadre - @nomeLega</h2>

<a class="btn btn-primary mb-3" asp-action="Crea" asp-route-legaId="@legaId">
    + Aggiungi Squadra
</a>

<button id="btnCopiaTutti" type="button" class="btn btn-outline-primary mb-3 ms-2">
    Copia Tutti
</button>

@if (!Model.Any())
{
    <div class="alert alert-info">Nessuna squadra ancora creata.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark text-center">
                <tr>
                    <th>Nome Squadra</th>
                    <th>Nickname</th>
                    <th>Crediti</th>
                    <th>Link Accesso</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody class="text-center align-middle">
                @foreach (var squadra in Model)
                {
                    <tr>
                        <td>@squadra.Nome</td>
                        <td>@squadra.Nickname</td>
                        <td>@squadra.Crediti</td>
                        <td style="min-width: 450px;">
                            <div class="input-group">
                                <input type="text" class="form-control" value="@ViewBag.BaseUrl/Utente?lega=@ViewBag.LegaAlias&nick=@squadra.Nickname" readonly>
                                <button class="btn btn-outline-secondary" type="button" onclick="copiaLink(this)">Copia</button>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Modifica" asp-route-id="@squadra.Id" class="btn btn-warning btn-sm">Modifica</a>

                                @* ✅ 1. MODIFICATO IL FORM DI ELIMINAZIONE *@
                                <form asp-action="Elimina" asp-route-id="@squadra.Id" method="post" class="form-elimina-squadra" data-nome-squadra="@squadra.Nome">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Elimina
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <script>
        function copiaLink(button) {
            const input = button.previousElementSibling;
            input.select();
            input.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(input.value).then(() => {
                const originalText = button.innerText;
                button.innerText = 'Copiato!';
                setTimeout(() => {
                    button.innerText = originalText;
                }, 1500);
            }).catch(err => {
                console.error('Errore durante la copia: ', err);
            });
        }

        // ✅ 2. AGGIUNTO LO SCRIPT PER USARE IL NUOVO POP-UP
        document.querySelectorAll('.form-elimina-squadra').forEach(form => {
            form.addEventListener('submit', async function(event) {
                // Impedisce al form di partire subito
                event.preventDefault();

                const nomeSquadra = this.dataset.nomeSquadra;
                const messaggio = `Sei sicuro di voler eliminare la squadra ${nomeSquadra}? Tutti i giocatori acquistati verranno persi.`;

                // Mostra il nostro modale personalizzato e aspetta la risposta
                if (await mostraMessaggio('Conferma Eliminazione', messaggio, true)) {
                    // Se l'utente ha cliccato "OK", invia il form
                    this.submit();
                }
                // Se l'utente clicca "Annulla" o chiude, non succede nulla.
            });
        });
            function copiaTestoNegliAppunti(testo) {
            // Prova API moderna
            return navigator.clipboard?.writeText(testo).catch(() => {
                // Fallback compatibilità
                const ta = document.createElement('textarea');
                ta.value = testo;
                ta.style.position = 'fixed';
                ta.style.opacity = '0';
                document.body.appendChild(ta);
                ta.focus();
                ta.select();
                try { document.execCommand('copy'); } finally { document.body.removeChild(ta); }
            });
        }

        function copiaTutti(btn) {
            const pairs = (window._allSquadLinks || []);
            if (!pairs.length) return;

            const testo = pairs.map(p => `${p.Nickname} - ${p.Link}`).join('\r\n\r\n'); // doppio a capo


            const original = btn.innerText;
            copiaTestoNegliAppunti(testo).then(() => {
                btn.innerText = 'Copiato!';
                btn.disabled = true;
                setTimeout(() => { btn.innerText = original; btn.disabled = false; }, 1500);
            }).catch(() => {
                alert('Impossibile copiare negli appunti.');
            });
        }

        // Collega il bottone
        document.getElementById('btnCopiaTutti')?.addEventListener('click', function () {
            copiaTutti(this);
        });
                window._allSquadLinks = @Html.Raw(allPairsJson);
                </script>
}