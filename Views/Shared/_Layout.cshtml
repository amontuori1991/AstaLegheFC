@*
  Layout principale (Admin / sito)
*@
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <!-- viewport-fit per gestire i notch -->
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>@ViewData["Title"] - AstaLegheFC</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AstaLegheFC.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <link rel="icon" type="image/png" href="~/png/logo_bazzer.png" />
    <link rel="apple-touch-icon" href="~/png/logo_bazzer.png" />

    <!-- Manifest ADMIN: avvio su Home -->
    <link rel="manifest" href="/manifest.json">

    <meta name="theme-color" content="#2c3e50" />

    <style>
        /* Logo navbar */
        .navbar-brand .brand-logo {
            height: 40px;
            width: auto;
        }
        @@media (max-width: 768px) {
            .navbar-brand .brand-logo

        {
            height: 32px;
        }

        }
        /* NON mettere padding-top globale al body (evita spazi eccessivi su iPhone) */
    </style>
</head>
<body>
    @* Loader opzionale *@
    <div id="loader-overlay"><div class="loader-spinner"></div></div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3"
             style="padding-top: env(safe-area-inset-top, 0px);">
            <div class="container-fluid">
                <a class="navbar-brand link-caricamento d-flex align-items-center"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/png/logo_bazzer.png" class="brand-logo" alt="Fantabazzer" />
                    <span class="brand-text d-none d-md-inline ms-2">AstaLegheFC</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark link-caricamento" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark link-caricamento" asp-controller="Admin" asp-action="ImportaListone">Importa Listone</a></li>
                        <li class="nav-item"><a class="nav-link link-caricamento" asp-controller="Leghe" asp-action="Index">Gestione Leghe</a></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Support" asp-action="Create">Assistenza/Richieste</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container"><main role="main" class="pb-3">@RenderBody()</main></div>

    <!-- Modal messaggi riuso -->
    <div class="modal fade" id="messaggioModale" tabindex="-1" aria-labelledby="messaggioModaleLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-white" style="background-color:#2c3e50;border:1px solid #3498db;">
                <div class="modal-header" style="border-bottom-color:#34495e;">
                    <h5 class="modal-title" id="messaggioModaleTitolo">Messaggio</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body"><p id="messaggioModaleCorpo"></p></div>
                <div class="modal-footer" style="border-top-color:#34495e;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="messaggioModaleBtnAnnulla">Annulla</button>
                    <button type="button" class="btn btn-primary" id="messaggioModaleBtnOk">OK</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted" style="padding-bottom: env(safe-area-inset-bottom, 0px);">
        <div class="container">&copy; 2025 - AstaLegheFC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Service Worker:
         - in localhost: UNREGISTER TUTTO (così non interferisce con F5)
         - in prod: registra /service-worker.js (nessun redirect)
    -->
    <script>
        (function(){
          var isLocalhost = /^(localhost|127\.0\.0\.1|\[::1\])(:\d+)?$/i.test(location.host);

          if ('serviceWorker' in navigator) {
            if (isLocalhost) {
              navigator.serviceWorker.getRegistrations().then(function(regs){
                regs.forEach(function(r){ r.unregister(); });
              });
            } else {
              window.addEventListener('load', function () {
                navigator.serviceWorker.register('/service-worker.js?v=7').then(function(reg){
                  // prova a forzare update
                  if (reg && reg.active) reg.active.postMessage && reg.active.postMessage('SKIP_WAITING');
                }).catch(function(){});
              });
            }
          }
        })();
    </script>

    <script>
        (function () {
          var isStandalone = (window.matchMedia && window.matchMedia('(display-mode: standalone)').matches)
                             || window.navigator.standalone === true; // iOS legacy
          if (!isStandalone) return;

          var isLocalhost = /^(localhost|127\.0\.0\.1|\[::1\])(:\d+)?$/i.test(location.host);
          if (isLocalhost) return; // non disturbare in sviluppo

          var p = (location.pathname || '').toLowerCase();

          // Pagine "atterraggio" tipiche dell'admin / root
          var isAdminLanding =
            p === '/' || p === '/index' ||
            p === '/home' || p === '/home/index' ||
            p === '/admin' || p === '/admin/index';

          if (!isAdminLanding) return;

          try {
            var last = localStorage.getItem('fb:lastUtenteUrl');
            // se ho già un URL utente salvato, vai lì; altrimenti apri il launcher utente
            if (last && /^\/utente(\?|$)/i.test(last)) {
              location.replace(last);
            } else {
              location.replace('/pwa/utente');
            }
          } catch (e) {
            location.replace('/pwa/utente');
          }
        })();
    </script>

</body>
</html>
