@*
  Layout Asta (utente)
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AstaLegheFC</title>


    <link rel="manifest" href="/pwa/manifest-utente">

    <meta name="theme-color" content="#2c3e50" />

    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="Fantabuzzer">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <link rel="apple-touch-icon" href="/images/icons/icon-192x192.png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/png/logo_bazzer.png" />
</head>
<body>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Modal messaggi riuso -->
    <div class="modal fade" id="messaggioModale" tabindex="-1" aria-labelledby="messaggioModaleLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-white" style="background-color: #2c3e50; border: 1px solid #3498db;">
                <div class="modal-header" style="border-bottom-color: #34495e;">
                    <h5 class="modal-title" id="messaggioModaleTitolo">Messaggio</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body"><p id="messaggioModaleCorpo"></p></div>
                <div class="modal-footer" style="border-top-color: #34495e;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="messaggioModaleBtnAnnulla">Annulla</button>
                    <button type="button" class="btn btn-primary" id="messaggioModaleBtnOk">OK</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- 🔒 Guard PWA: se avviata da icona senza parametri, manda all'ultima URL utente salvata -->
    <script>
        (function(){
          var inStandalone = window.matchMedia('(display-mode: standalone)').matches || window.navigator.standalone;
          if (!inStandalone) return;
          var p = location.pathname.toLowerCase();
          var qs = new URLSearchParams(location.search);
          var missingParams = (p === '/utente' && (!qs.get('lega') || !qs.get('nick')));
          if (p === '/' || missingParams) {
            var last = localStorage.getItem('fb:lastUtenteUrl');
            if (last) location.replace(last);
            else location.replace('/app-launch.html');
          }
        })();
    </script>

    <!-- Service Worker -->
    <script>
        if ('serviceWorker' in navigator) {
          window.addEventListener('load', () => {
            navigator.serviceWorker.register('/service-worker.js')
              .then(() => console.log('Service Worker registrato.'))
              .catch(err => console.error('SW registration fail:', err));
          });
        }
    </script>
    <script>
        // Salva lega/nick ogni volta che l’utente apre la pagina corretta dal browser
        (function () {
          try {
            const u = new URL(location.href);
            const lega = u.searchParams.get('lega');
            const nick = u.searchParams.get('nick');
            if (lega && nick) {
              localStorage.setItem('pwa:lega', lega);
              localStorage.setItem('pwa:nick', nick);
            }
          } catch {}
        })();
    </script>

</body>
</html>
