@using Microsoft.AspNetCore.Identity
@using AstaLegheFC.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark d-flex align-items-center gap-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Gestisci profilo">
                <i class="bi bi-person-circle"></i> Ciao @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0 d-flex align-items-center gap-1">
                    <i class="bi bi-box-arrow-right"></i> Esci
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark d-flex align-items-center gap-1" id="login" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right"></i> Accedi
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark d-flex align-items-center gap-1" id="register" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus"></i> Registrati
            </a>
        </li>
    }
</ul>
