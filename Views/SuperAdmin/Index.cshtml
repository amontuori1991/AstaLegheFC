                                                              onsubmit="return confirm('Confermi l\\'eliminazione definitiva di @u.Email? L\\'operazione rimuoverà utente, leghe, squadre, giocatori e listone correlati.');">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="userId" value="@u.Id" />
                                                            <button class="btn btn-outline-danger">
                                                                Elimina utente
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

