                                            var dateId = $"date_{u.Id}";
                                            var planId = $"plan_{u.Id}";
                                            <tr>
                                                <td>@u.Email</td>
                                                <td>@u.UserName</td>
                                                <td>@fmt(u.LicenseExpiresAt)</td>
                                                <td>
