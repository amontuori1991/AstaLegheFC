                                                            Per sempre
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        // yyyy-mm-dd da Date (UTC)
        function toYMD(d){
          const y = d.getUTCFullYear();
          const m = String(d.getUTCMonth() + 1).padStart(2,'0');
          const da = String(d.getUTCDate()).padStart(2,'0');
          return `${y}-${m}-${da}`;
        }

        // Aggiunge n mesi gestendo end-of-month (UTC)
        function addMonthsUTC(base, n){
          const y = base.getUTCFullYear();
          const m = base.getUTCMonth();
          const d = base.getUTCDate();
          const firstTarget = new Date(Date.UTC(y, m + n, 1));
          const lastDay = new Date(Date.UTC(y, m + n + 1, 0)).getUTCDate(); // ultimo giorno target
          const day = Math.min(d, lastDay);
          return new Date(Date.UTC(y, m + n, day));
        }

        // Applica piano → data
        function applyPlanToDate(sel, dateInputId){
          const plan = sel.value;
          const dateEl = document.getElementById(dateInputId);
          if (!dateEl) return;

          if (plan === 'LIFE'){ dateEl.value = ''; return; }

          const today = new Date();
          const baseUTC = new Date(Date.UTC(today.getFullYear(), today.getMonth(), today.getDate()));

          let months = 0;
          if (plan === '1M') months = 1;
          else if (plan === '6M') months = 6;
          else if (plan === '12M') months = 12;
          else return; // Piano… non modifica

          const expiresUTC = addMonthsUTC(baseUTC, months);
          dateEl.value = toYMD(expiresUTC);
        }

        // Forza "Per sempre"
        function setForever(planId, dateId){
          const sel = document.getElementById(planId);
          const d = document.getElementById(dateId);
          if (sel) sel.value = 'LIFE';
          if (d) d.value = '';
        }
    </script>
}
